<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id = "@+id/card_user_rec_pix_starred"
        android:innerRadius="0dp"
        android:shape="ring"
        android:layout_margin="4dp"
        android:thicknessRatio="1.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="32dp">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/img_user_receiver_stared"
            android:padding="4dp"
            tools:src="@drawable/ic_add_user"
            android:contentDescription="@string/address_hint"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#353B50"
        android:fontFamily="@font/fauna_one"
        tools:text="Hello There"
        android:textStyle="bold"

        android:id="@+id/user_receiver_name_starred"
        app:layout_constraintStart_toEndOf="@id/card_user_rec_pix_starred"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_time"
        app:layout_constraintTop_toBottomOf="@id/user_receiver_name_starred"
        app:layout_constraintStart_toEndOf="@id/card_user_rec_pix_starred"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/fauna_one"
        tools:text= "12:34"

        android:textColor="#353B50"
        android:id="@+id/user_receiver_time_starred"
        android:drawableLeft="@drawable/ic_time" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/navigation_drawer_close"
        android:src = "@drawable/ic_star_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>