<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RhemaHiveViewPackage.RhemaHiveDecisionActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constr_lay_decis"
   >

    <TextView
        android:id="@+id/choose_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:shadowColor="#2d000000"
        android:textAlignment="center"
        android:shadowDy="1"
        android:drawableLeft="@drawable/rhema_logg"
        android:drawableStart="@drawable/rhema_logg"
        android:shadowRadius="2"
        app:layout_constraintBottom_toTopOf="@+id/areu_tv_label"
        android:textColor="#353b50"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/constr_lay_decis"
        app:layout_constraintRight_toRightOf="@+id/constr_lay_decis"
        app:layout_constraintTop_toTopOf="@+id/constr_lay_decis"
        />

    <TextView
        android:id="@+id/areu_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="88dp"
        android:gravity="center"
        android:fontFamily="@font/arbutus_slab"
        android:shadowColor="#2d000000"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#353b50"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/constr_lay_decis"
        app:layout_constraintRight_toRightOf="@+id/constr_lay_decis"
        app:layout_constraintTop_toTopOf="@+id/choose_user_label"
        android:text="@string/are_you_a"/>





    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/rad_grp_user_selec"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintBottom_toBottomOf="@id/constr_lay_decis"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/constr_lay_decis"
        app:layout_constraintRight_toRightOf="@+id/constr_lay_decis"
        app:layout_constraintTop_toBottomOf="@+id/areu_tv_label">

        <RadioButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:shadowColor="#2d000000"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#353b50"
            android:textSize="14sp"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="44dp"
            android:text="@string/user_dec_label"
            android:layout_marginEnd="44dp"
            android:id="@+id/user_rad"
            android:drawableLeft="@drawable/user_church_icon"
            android:drawableStart="@drawable/user_church_icon"
            android:layout_marginTop="16dp"
            />

    <RadioButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:shadowColor="#2d000000"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="#353b50"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:id="@+id/church_rad"
        android:text="@string/church_lab"
        android:textSize="12sp"
        android:textAlignment="center"
        android:drawableStart="@drawable/church_icon"
        android:drawableLeft="@drawable/church_icon"
        android:layout_marginTop="22dp"
        />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>