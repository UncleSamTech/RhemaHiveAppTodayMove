<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/com_smart_login_code"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.cardview.widget.CardView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/user_retr_logg2"
        app:cardCornerRadius="39dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.3"
        android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/user_retr_logg"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/nav_header_desc"
        android:layout_margin = "4dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rhema_logg"
        android:layout_alignParentStart="true"
         />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/user_retr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin = "16dp"
        android:layout_toEndOf="@id/user_retr_logg2"
        android:layout_toRightOf="@id/user_retr_logg2"
        android:fontFamily="@font/arbutus_slab"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_surface"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Samuel Iwuchukwu" />

    <TextView
        android:id="@+id/user_retr_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/user_retr_logg2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"

        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_email_white"
        android:drawableLeft="@drawable/ic_email_white"
        android:fontFamily="@font/arbutus_slab"
        android:textSize="12sp"
        tools:text="@string/email_hint" />

    <TextView
        android:id="@+id/user_retr_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_retr_logg2"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/user_retr_email"
        android:layout_toRightOf="@+id/user_retr_email"
        android:drawableStart="@drawable/ic_phone_white"
        android:drawableLeft="@drawable/ic_phone_white"
        android:fontFamily="@font/arbutus_slab"
        android:textSize="12sp"
        tools:text="@string/number_samp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_retr_email"
        android:layout_margin = "8dp"
        android:id="@+id/church_sum_lab"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="@string/profile_summary"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/church_sum_lab"
        android:layout_marginLeft = "16dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/total_member_count"
        android:id="@+id/user_church_name"
        android:fontFamily="@font/arbutus_slab"
        android:textColor="@color/design_default_color_surface"
        tools:text="Church of Christ"
        android:drawableLeft="@drawable/church_icon"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:drawableStart="@drawable/church_icon"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp" />

